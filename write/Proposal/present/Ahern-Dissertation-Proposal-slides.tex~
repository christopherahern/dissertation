% \end{equation}
% \end{frame}

\begin{frame}{Pooling Equilibria}
\begin{block}{Always $m_1$}
 \begin{equation}
    t^* = 1
  \end{equation}
\begin{equation}
	  a_1^* = \frac{t^*}{2}
\end{equation}     
\end{block}
\end{frame}


\begin{frame}{Pooling Equilibria}
\begin{block}{Always $m_2$}
 \begin{equation}
    t^* = 0
  \end{equation}
\begin{equation}
	  a_2^* = \frac{1 + t^*}{2}
\end{equation}     
\end{block}
\end{frame}



\begin{frame}{(Partially-)Separating Equilibrium}
\begin{block}{Differentiate $m_1$ and $m_2$}
      \begin{equation}
    t^* = \frac{1}{2} - 6b
  \end{equation}
\begin{equation}
     \begin{split}
	  a_1^* &= \frac{t^*}{2}\\
	  a_2^* &= \frac{1 + t^*}{2}
     \end{split}
\end{equation}
\end{block}
\end{frame}

