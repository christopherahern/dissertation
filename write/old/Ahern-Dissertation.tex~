  \node (G1) [above of=A] {$G_{ne}$};
  \node [venn circle = 4cm] (B) at (0:3cm) {$\beta$};
  \node (G2) [above of=B] {$G_{not}$};
%   \node[below] at (barycentric cs:A=1/2,C=1/2 ) {$G_1 G_2$};   
\end{tikzpicture}       
\end{center}
\caption{Two mutually incompatible grammars}
\label{grammars}
\end{figure}


