	  \node [draw,circle,minimum size=3cm] (C) at (0:.5cm) {$\alpha$};
	  \node (G1) [above of=C] {$G_{ne}$};
	  \node [draw,circle,minimum size=1cm] (B) at (0:1.5cm) {};
